{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pnpm lint",
            "timeout": 60,
            "statusMessage": "Running lint..."
          },
          {
            "type": "command",
            "command": "pnpm typecheck",
            "timeout": 60,
            "statusMessage": "Running typecheck..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Grep",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(curl:*)",
      "Bash(command -v:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Skill(*)"
    ],
    "deny": [],
    "ask": ["Bash(rm:*)"]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "claude-plugins-official": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-plugins-official"
      }
    }
  }
}
